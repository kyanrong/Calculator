<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">

    <EditText
        android:id="@+id/input"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/inputHint"
        android:gravity="right"
        android:textSize="80sp"/>

    <LinearLayout
        android:id="@+id/layout_operators"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/input"
        android:layout_toRightOf="@id/layout_numbers"
        android:layout_alignParentRight="true">

        <Button android:id="@+id/button_mul"
            style="@style/StyleOperators"
            android:text="@string/button_mul" />

        <Button android:id="@+id/button_minus"
            style="@style/StyleOperators"
            android:text="@string/button_sub" />

        <Button android:id="@+id/button_add"
            style="@style/StyleOperators"
            android:text="@string/button_add" />

        <Button android:id="@+id/button_eq"
            android:layout_width="90dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="40sp"
            android:text="@string/button_eq" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_numbers"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_below="@id/input"
        android:orientation="vertical">

        <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

            <Button android:id="@+id/button_del"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:text="@string/button_del" />

            <Button android:id="@+id/button_div"
                style="@style/StyleOperators"
                android:text="@string/button_div" />
         </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <Button android:id="@+id/button_1"
                style="@style/StyleNumbers"
                android:text="@string/button_1" />

            <Button android:id="@+id/button_2"
                style="@style/StyleNumbers"
                android:text="@string/button_2" />

            <Button android:id="@+id/button_3"
                style="@style/StyleNumbers"
                android:text="@string/button_3" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <Button android:id="@+id/button_4"
                style="@style/StyleNumbers"
                android:text="@string/button_4" />

            <Button android:id="@+id/button_5"
                style="@style/StyleNumbers"
                android:text="@string/button_5" />

            <Button android:id="@+id/button_6"
                style="@style/StyleNumbers"
                android:text="@string/button_6" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <Button android:id="@+id/button_7"
                style="@style/StyleNumbers"
                android:text="@string/button_7" />

            <Button android:id="@+id/button_8"
                style="@style/StyleNumbers"
                android:text="@string/button_8" />

            <Button android:id="@+id/button_9"
                style="@style/StyleNumbers"
                android:text="@string/button_9" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <Button android:id="@+id/button_neg"
                style="@style/StyleOperators"
                android:text="@string/button_neg" />

            <Button android:id="@+id/button_0"
                style="@style/StyleNumbers"
                android:text="@string/button_0" />

            <Button android:id="@+id/button_dec"
                style="@style/StyleOperators"
                android:text="@string/button_dec" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

